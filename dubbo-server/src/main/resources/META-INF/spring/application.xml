<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-server"/>
    <!-- 如果不用注册中心，可以这样设置。无需注册到服务注册中心-->
    <!-- <dubbo:registry address="N/A"/>-->
    <dubbo:registry  address="zookeeper://192.168.236.129:2181" timeout="10000"/>
    <dubbo:protocol name="dubbo"  port="20880"/>

    <dubbo:service interface="com.itcast.dubbo.ILoginService" ref="loginService"/>
    <bean id="loginService"  class="com.itcast.dubbo.LoginServiceImpl"/>

</beans>